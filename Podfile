target 'PrettyPets' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for PrettyPets
	pod 'Firebase/Core'
	pod 'Firebase/Database'
	pod 'Firebase/Auth'
	pod 'Firebase/Storage'	

  target 'PrettyPetsTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'PrettyPetsUITests' do
    inherit! :search_paths
    # Pods for testing
      pod 'SDWebImage', '~> 4.0'
  end

end
